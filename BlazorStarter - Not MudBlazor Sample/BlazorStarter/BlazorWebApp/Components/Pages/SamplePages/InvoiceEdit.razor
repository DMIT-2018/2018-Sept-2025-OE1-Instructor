@page "/SamplePages/InvoiceEdit/{InvoiceID:int}/{CustomerID:int}/{EmployeeID:int}"
@using OLTPSystem.ViewModels

<PageTitle>Invoice Edit</PageTitle>

<MudText Typo="Typo.h3">
    @(invoice.InvoiceID == 0 ? "New Invoice" : $"Invoice #: {invoice.InvoiceID} {randomMessage}")
</MudText>

<DMIT2018FeedbackAndErrorDisplay ErrorDetails="@errorDetails" ErrorMessage="@errorMessage" FeedbackMessage="@feedbackMessage" />

<MudGrid>
    <MudItem sm="12" md="6">
        <MudPaper Elevation="4" Class="pa-2" Height="155px">
            <MudStack>
                <MudText Typo="Typo.h6" Align="Align.Center">
                    <strong>Invoice Date: </strong>@invoice.InvoiceDate.ToShortDateString()
                </MudText>
                <MudText Typo="Typo.h6" Align="Align.Center">
                    <strong>Employee: </strong>@invoice.EmployeeName (@invoice.EmployeeID)
                </MudText>
                <MudText Typo="Typo.h6" Align="Align.Center">
                    <strong>Customer: </strong>@invoice.CustomerName (@invoice.CustomerID)
                </MudText>
            </MudStack>
        </MudPaper>
    </MudItem>
    <MudItem sm="12" md="6">
        <MudPaper Elevation="4" Class="pa-2" Height="155px">
            <MudStack>
                <MudText Typo="Typo.h6" Align="Align.Center">
                    <strong>Subtotal: </strong>@invoice.SubTotal.ToString("C2")
                </MudText>
                <MudText Typo="Typo.h6" Align="Align.Center">
                    <strong>Tax: </strong>@invoice.Tax.ToString("C2")
                </MudText>
                <MudDivider DividerType="DividerType.Middle" />
                <MudText Typo="Typo.h6" Align="Align.Center">
                    <strong>Total: </strong>@invoice.Total.ToString("C2")
                </MudText>
            </MudStack>
        </MudPaper>
    </MudItem>
</MudGrid>
<MudStack Row
          Class="mt-2"
          AlignItems="AlignItems.Center"
          Spacing="4">
    <MudSelect Variant="Variant.Outlined"
               Immediate
               Placeholder="Select a Category"
               Value="categoryID"
               ValueChanged="(int? newCategoryID) => CategoryChanged(newCategoryID)">
        @foreach(var category in parts.Select(x => new
                                    {
                                        CategoryID = x.PartCategoryID,
                                        CategoryName = x.CategoryName
                                    })
                                    .Distinct()
                                    .ToList())
        {
            <MudSelectItem T="int?" Value="category.CategoryID">@category.CategoryName</MudSelectItem>
        }
    </MudSelect>
    <MudSelect Variant="Variant.Outlined"
               Immediate
               Placeholder="Select a Part..."
               @bind-Value="selectedPart"
               Disabled="@(categoryID == null || categoryID == 0)">
        @foreach(var part in parts.Where(x => x.PartCategoryID == categoryID 
                            && !invoice.InvoiceLines.Select(p => p.PartID).Contains(x.PartID)).ToList())
        {
            <MudSelectItem T="InvoicePartView" Value="part">@part.Description (@part.QOH)</MudSelectItem>
        }
    </MudSelect>
    <MudNumericField @bind-Value="quantity"
                     Variant="Variant.Outlined"
                     Min="0"
                     Max="selectedPart?.QOH ?? 0"
                     Disabled=@(selectedPart == null) />
    <MudButton Variant="Variant.Filled"
               Color="Color.Primary"
               Disabled="@(quantity <= 0)"
               OnClick="AddPart">
        Add Part       
    </MudButton>
</MudStack>
<MudDataGrid Items="invoice.InvoiceLines"
             Striped
             Class="mt-2"
             FixedFooter
             FixedHeader
             Height="40vh"
             ReadOnly="false"
             EditMode="DataGridEditMode.Cell"
             EditTrigger="DataGridEditTrigger.OnRowClick">
    <Columns>
        <PropertyColumn Property="x => x.PartID" Title="Part ID" Editable="false" />
        <PropertyColumn Property="x => x.PartDescription" Title="Description" Editable="false" />
        <PropertyColumn Property="x => x.Quantity" Title="Quantity">
            <EditTemplate>
                <MudNumericField Value="context.Item.Quantity"
                                 ValueChanged="(int newQuantity) => QuantityEdited(context.Item, newQuantity)"
                                 Immediate
                                 Margin="Margin.Dense"
                                 Min="0"
                                 Max="@(parts.Where(x => x.PartID == context.Item.PartID).Select(x => x.QOH).FirstOrDefault())" />
            </EditTemplate>
        </PropertyColumn>
        <PropertyColumn Property="x => x.Price" Title="Price">
            <EditTemplate>
                <MudNumericField Value="context.Item.Price"
                                 ValueChanged="(decimal newPrice) => PriceEdited(context.Item, newPrice)"
                                 Immediate
                                 Margin="Margin.Dense"
                                 Min="0.00m"
                                 Step="0.5m"
                                 Format="C2" />
            </EditTemplate>
        </PropertyColumn>
        <PropertyColumn Property="x => x.ExtentPrice" Title="Ext. Price" Editable="false" Format="C2"/>
        <TemplateColumn Editable="false">
            <CellTemplate>
                <MudIconButton Color="Color.Error" 
                               Icon="@Icons.Material.Filled.Delete"
                               OnClick="@(() => DeletePart(context.Item))" />
                <MudIconButton Color="Color.Tertiary"
                               Icon="@Icons.Material.Filled.Sync"
                               OnClick="() => SyncPrice(context.Item)" />
            </CellTemplate>
        </TemplateColumn>
    </Columns>         
</MudDataGrid>

<!-- Save/Exit Buttons -->
<MudStack Class="mt-2"
          Spacing="2"
          Row
          AlignItems="AlignItems.Center"
          Justify="Justify.Center">
    <MudButton Color="Color.Primary"
               Variant="Variant.Filled"
               OnClick="SaveInvoice">
        Save       
    </MudButton>
    <MudButton Color="Color.Info"
               Variant="Variant.Filled"
               OnClick="CloseInvoice">
        @(edited ? "Cancel" : "Close")
    </MudButton>
</MudStack>